---
import katex from 'katex'

const { formula = '', inline = false } = Astro.props
const html = katex.renderToString(formula, { throwOnError: false, displayMode: !inline })
---

{inline ? <span set:html={html} /> : <div class='text-center' set:html={html} />}

<link
	rel='stylesheet'
	href='https://cdn.jsdelivr.net/npm/katex@0.15.1/dist/katex.css'
	integrity='sha384-WsHMgfkABRyG494OmuiNmkAOk8nhO1qE+Y6wns6v+EoNoTNxrWxYpl5ZYWFOLPCM'
	crossorigin='anonymous'
/>
